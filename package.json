{
  "name": "revgrid",
  "version": "0.9.2",
  "description": "Canvas based high performance grid",
  "module": "dist/code/public-api.js",
  "typings": "dist/types/public-api.d.ts",
  "homepage": "https://revgrid.github.io/revgrid/",
  "repository": {
    "type": "git",
    "url": "git://github.com/revgrid/revgrid.git"
  },
  "contributors": [
    "Paul Klink (https://paul.klink.au)"
  ],
  "license": "MIT",
  "readmeFilename": "README.md",
  "keywords": [
    "grid",
    "canvas",
    "virtual",
    "performance",
    "realtime"
  ],
  "files": [
    "dist/**/*",
    "src/**/*.ts",
    "src/**/*.json",
    "src/**/*.css"
  ],
  "scripts": {
    "link-pbkware": "npm link @pbkware/js-utils",
    "lint": "eslint",
    "build": "tsc --build ./src/code/tsconfig.json",
    "force-build": "tsc --build --force ./src/code/tsconfig.json",
    "lib": "tsc --project ./src/code/tsconfig.json --emitDeclarationOnly",
    "rollup": "npx api-extractor run --local --verbose",
    "types": "npm run lib && npm run rollup",
    "api": "npm run build && npm run rollup",
    "force-api": "npm run force-build && npm run rollup",
    "clean": "npx del-cli ./dist && npx del-cli ./lib",
    "dist": "npm run clean && npm run force-api && copyfiles -f src/style/revgrid.css dist/css",
    "bundles": "webpack --config ./bundles-webpack.config.js",
    "clienttestapp": "tsc --project ./test-app/client/tsconfig.json",
    "clienttestapp:build": "webpack --mode development --config ./test-app/client/webpack.config.js",
    "clienttestapp:serve": "webpack serve --mode development --config ./test-app/client/webpack.config.js",
    "recordtestapp": "tsc --project ./test-app/record/tsconfig.json",
    "recordtestapp:build": "webpack --mode development --config ./test-app/record/webpack.config.js",
    "recordtestapp:serve": "webpack serve --mode development --config ./test-app/record/webpack.config.js",
    "dratestapp": "tsc --project ./test-app/data-row-array/tsconfig.json",
    "dratestapp:build": "webpack --mode development --config ./test-app/data-row-array/webpack.config.js",
    "dratestapp:serve": "webpack serve --mode development --config ./test-app/data-row-array/webpack.config.js",
    "doc": "npx del-cli ./doc/* && typedoc --options ./typedoc.json"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "7.52.8",
    "copyfiles": "2.4.1",
    "css-loader": "7.1.2",
    "del-cli": "6.0.0",
    "eslint": "9.28.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import-x": "4.15.1",
    "html-webpack-plugin": "5.6.3",
    "source-map-loader": "5.0.0",
    "style-loader": "4.0.0",
    "ts-loader": "9.5.2",
    "typedoc": "0.28.5",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1",
    "update-browserslist-db": "1.1.3",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "browserslist": [
    "last 1 Chrome version",
    "last 1 Firefox version",
    "last 2 Edge major versions",
    "last 2 Safari major versions",
    "last 2 iOS major versions",
    "Firefox ESR"
  ],
  "dependencies": {
    "@pbkware/js-utils": "0.8.1"
  }
}
